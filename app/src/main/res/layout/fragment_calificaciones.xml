<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.calificaciones.CalificacionesFragment">

    <LinearLayout
        android:id="@+id/formulario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <!-- Agrega elementos de formulario aquÃ­ -->

        <EditText
            android:id="@+id/txtCalificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calificacion"
            android:textColorHint="@color/hint"
            android:inputType="numberDecimal"
            android:textColor="@color/gray"/>

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID de la materia"
            android:textColorHint="@color/hint"
            android:textColor="@color/gray"
            android:paddingEnd="20dp"
            android:layout_marginBottom="8dp"
            android:inputType="number"
            android:drawableEnd="@drawable/busqueda"/>


        <ListView
            android:id="@+id/listViewResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/editTextSearch"
            android:layout_marginTop="8dp"
            android:visibility="gone" />


        <Button
            android:id="@+id/GuardarP"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Guardar" />


    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add" />
</RelativeLayout>